<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Цвета -->
    <Color x:Key="BackgroundColor">#1F232B</Color>
    <Color x:Key="PanelBackgroundColor">#111418</Color>
    <Color x:Key="TextColor">#FFFFFF</Color>
    <Color x:Key="SubTextColor">#D1D5DB</Color>
    <Color x:Key="AccentColor">#2563EB</Color>
    <Color x:Key="DangerColor">#991B1B</Color>
    <Color x:Key="HoverColor">#2C2F36</Color>
    <Color x:Key="HeaderColor">#3A3D45</Color>
    <Color x:Key="BorderColor">#3A3D45</Color>

    <!-- Кисти -->
    <SolidColorBrush x:Key="HighlightBrush" Color="#2563EB" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="{StaticResource PanelBackgroundColor}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="SubTextBrush" Color="{StaticResource SubTextColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource DangerColor}" />
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}" />
    <SolidColorBrush x:Key="HeaderBrush" Color="{StaticResource HeaderColor}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />


    <ImageSource x:Key="LogoImageSource">/FinTrack;component/Themes/Images/full_white@4x.png</ImageSource>

</ResourceDictionary>
