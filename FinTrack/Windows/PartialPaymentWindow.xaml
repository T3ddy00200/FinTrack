<Window x:Class="FinTrack.Windows.PartialPaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Partial Payment"
        Width="300" Height="240"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundBrush}"
        WindowStyle="None" ResizeMode="NoResize">

    <Border BorderBrush="#3A3D45" BorderThickness="1" CornerRadius="6" Padding="15">
        <StackPanel>

            <!-- Debtor name -->
            <TextBlock x:Name="DebtorNameText"
                       Text="Debtor Name"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       Margin="0,0,0,10"
                       TextAlignment="Center"/>

            <!-- Amount entry -->
            <Grid>
                <TextBox x:Name="AmountBox"
                         Background="#2C2F36"
                         Foreground="{DynamicResource TextBrush}"
                         FontSize="14"
                         Padding="10,5"
                         BorderBrush="#3A3D45" />

                <TextBlock Text="Enter amount..."
                           Margin="12,5,0,0"
                           Foreground="#777"
                           FontSize="13"
                           IsHitTestVisible="False"
                           VerticalAlignment="Top">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=AmountBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>

            <!-- Next button -->
            <Button Content="Next"
                    IsDefault="True"
                    Click="AddToExisting_Click"
                    Margin="0,15,0,10"
                    Background="{DynamicResource HoverBrush}"
                    Foreground="{DynamicResource TextBrush}" />

            <!-- Cancel button -->
            <Button Content="Cancel"
                    Click="Cancel_Click"
                    Background="{DynamicResource HoverBrush}"
                    Foreground="{DynamicResource TextBrush}"
                    Width="100"
                    HorizontalAlignment="Right"/>
        </StackPanel>
    </Border>
</Window>
