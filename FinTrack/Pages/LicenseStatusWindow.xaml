<Window x:Class="FinTrack.Pages.LicenseStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Лицензирование"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E"
        ShowInTaskbar="False">
    <Border Padding="30" CornerRadius="10" Background="#FF2C2C2C">
        <StackPanel HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Введите логин и ключ:" FontSize="18" Foreground="White" Margin="0,0,0,20" TextAlignment="Center"/>
            <TextBlock Text="логин:" FontSize="18" Foreground="White" TextAlignment="Center"/>

            <TextBox x:Name="LoginBox"  Margin="0,0,0,10" FontSize="14"/>
            <TextBlock Text="ключ:" FontSize="18" Foreground="White" Margin="0,0,0,0" TextAlignment="Center"/>

            <PasswordBox x:Name="KeyBox" Margin="0,0,0,10" FontSize="14"/>

            <TextBlock x:Name="StatusText"
                       Text=""
                       FontSize="14"
                       Foreground="LightGray"
                       TextAlignment="Center"
                       Margin="0,15,0,0"/>
            <Button Content="✅ Войти"
                    Click="LoginButton_Click"
                    Padding="8,4"
                    Background="#00C853"
                    Foreground="White"/>

            <Button Content="❌ Закрыть"
        Click="CancelButton_Click"
        Padding="8,4"
        Background="#C62828"
        Foreground="White"
        Margin="0,5,0,0"/>


        </StackPanel>
    </Border>
</Window>
