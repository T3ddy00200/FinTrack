<UserControl x:Class="FinTrack.Pages.NotificationsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}">


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20" VerticalAlignment="Top">
            <TextBlock Text="Отправка уведомлений должникам" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource TextBrush}" Margin="0,0,0,20"/>

            <!-- От кого -->
            <Expander Header="Настройки отправителя"
          Foreground="{DynamicResource TextBrush}"
          Background="{DynamicResource BackgroundBrush}"
          Margin="0,0,0,15">
                <StackPanel Margin="10,5,0,10">
                    <TextBlock Text="Email отправителя:" Foreground="{DynamicResource TextBrush}" />
                    <TextBox x:Name="SenderEmailBox" Width="300" Margin="0,5,0,10"/>

                    <TextBlock Text="Пароль приложения (отправка):" Foreground="{DynamicResource TextBrush}" />
                    <PasswordBox x:Name="SenderPasswordBox" Width="300" Margin="0,5,0,10"/>

                    <TextBlock Text="Пароль приложения (чтение писем):" Foreground="{DynamicResource TextBrush}" />
                    <PasswordBox x:Name="ReadPasswordBox" Width="300" Margin="0,5,0,10"/>

                    <Button Content="Сохранить настройки"
                Width="200"
                Margin="0,10,0,0"
                Click="SaveSettingsButton_Click"/>
                </StackPanel>
            </Expander>



            <!-- Кому -->
            <TextBlock Text="Выберите должников:" Foreground="{DynamicResource TextBrush}" />
            <ListBox x:Name="RecipientsListBox"
         SelectionMode="Extended"
         DisplayMemberPath="Name"
         Width="300"
         Height="150"
         Background="{DynamicResource PanelBackgroundBrush}"
         Foreground="{DynamicResource TextBrush}"
         Margin="0,5,0,10"/>



            <!-- Сообщение -->
            <TextBlock Text="Текст сообщения:" Foreground="{DynamicResource TextBrush}" />
            <TextBox x:Name="MessageTextBox"  Background="{DynamicResource PanelBackgroundBrush}" Foreground="{DynamicResource TextBrush}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5,0,15"/>

            <Button Content="Отправить сообщение" Width="200" Height="40" Click="SendNotification_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
