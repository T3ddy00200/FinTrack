<UserControl x:Class="FinTrack.Controls.UsersPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}"
             Loaded="UserControl_Loaded"
             MinHeight="400" MinWidth="600">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Users"
               FontSize="24"
               FontWeight="Bold"
               Foreground="{DynamicResource TextBrush}"
               Margin="0,0,0,20"/>

        <!-- Action buttons -->
        <StackPanel Grid.Row="1"
                Orientation="Horizontal"
                Margin="30,0,0,10"
                    Width="Auto"
                HorizontalAlignment="Left">
            <Button Content="Add User"
              Width="100" Height="30"
              Background="{DynamicResource AccentBrush}"
              Foreground="White"/>
            <Button Content="Edit User"
              Width="100" Height="30"
              Background="{DynamicResource HoverBrush}"
              Foreground="{DynamicResource TextBrush}"/>
            <Button Content="Delete User"
              Width="100" Height="30"
              Background="{DynamicResource DangerBrush}"
              Foreground="White"/>
        </StackPanel>

        <!-- Users table -->
        <DataGrid Grid.Row="2"
              x:Name="UsersGrid"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserReorderColumns="False"
              CanUserSortColumns="True"
              SelectionMode="Extended"
              HeadersVisibility="Column"
              RowBackground="{DynamicResource BackgroundBrush}"
              AlternatingRowBackground="{DynamicResource PanelBackgroundBrush}"
              Background="{DynamicResource PanelBackgroundBrush}"
              Foreground="{DynamicResource TextBrush}"
              BorderBrush="{DynamicResource BorderBrush}"
              GridLinesVisibility="Horizontal">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}"/>
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Username"
                            Binding="{Binding Username}"
                            Width="2*"/>
                <DataGridTextColumn Header="Email"
                            Binding="{Binding Email}"
                            Width="3*"/>
                <DataGridTextColumn Header="Role"
                            Binding="{Binding Role}"
                            Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
