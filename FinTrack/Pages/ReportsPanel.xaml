<UserControl x:Class="FinTrack.Pages.ReportsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}"
              Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Экспорт отчётов"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,20"/>

            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Поиск компаний"
                           Foreground="{DynamicResource TextBrush}"
                           FontSize="12"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="SearchBox"
                         Width="300"
                         FontSize="20"
                         Padding="10,5"
                         Background="{DynamicResource PanelBackgroundBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource HighlightBrush}"
                         TextChanged="SearchBox_TextChanged"/>
            </StackPanel>
          
            
            <ListBox x:Name="CompaniesListBox"
                     Height="150"
                     SelectionMode="Extended"
                     Background="{DynamicResource PanelBackgroundBrush}"
                     Foreground="{DynamicResource TextBrush}"
                     BorderBrush="{DynamicResource HighlightBrush}"
                     FontSize="18"
                     Margin="0,10"/>
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Выберите компании:" Foreground="{DynamicResource TextBrush}" VerticalAlignment="Center"/>
                <Button Content="Выбрать все"
  Click="SelectAllCompanies_Click"
  Background="{DynamicResource AccentBrush}"
  Foreground="White"
  Margin="10,0,0,0"
  Padding="10,2"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Экспорт в Excel"
                        Click="ExportToExcel_Click"
                        Margin="0,0,10,0"
                        FontSize="18"
                        Padding="10,5"
                        Background="#2563EB"
                        Foreground="White"/>

                <Button Content="Экспорт в PDF"
                        Click="ExportToPdf_Click"
                        FontSize="18"
                        Padding="10,5"
                        Background="#991B1B"
                        Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
