<UserControl x:Class="FinTrack.Pages.ReportsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource BackgroundBrush}"
             Loaded="UserControl_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header + Search -->
            <RowDefinition Height="*"/>
            <!-- ListBox растягивается -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header + Search -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">

            <TextBlock Text="Export Reports"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="0,0,0,20"/>

            <Grid Width="300" Margin="0,0,0,10">
                <TextBox x:Name="SearchBox"
                         FontSize="14"
                         Padding="10,5"
                         Background="{DynamicResource PanelBackgroundBrush}"
                         Foreground="{DynamicResource TextBrush}"
                         BorderBrush="{DynamicResource BorderBrush}"
                         TextChanged="SearchBox_TextChanged"/>

                <TextBlock Text="Search by company, email or phone..."
                           Foreground="{DynamicResource SubTextBrush}"
                           FontSize="13"
                           Margin="12,5,0,0"
                           IsHitTestVisible="False"
                           VerticalAlignment="Top">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=SearchBox}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </StackPanel>

        <!-- Растягиваемый ListBox -->
        <ListBox x:Name="CompaniesListBox"
                 Grid.Row="1"
                 SelectionMode="Extended"
                 Background="{DynamicResource PanelBackgroundBrush}"
                 Foreground="{DynamicResource TextBrush}"
                 BorderBrush="{DynamicResource HighlightBrush}"
                 FontSize="18"
                 VerticalAlignment="Stretch"
                 BorderThickness="1"
                 Margin="0,0,0,10"/>

        <!-- Кнопки и действия -->
        <StackPanel Grid.Row="2">

            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Select companies:"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"/>
                <Button Content="Select All"
                        Click="SelectAllCompanies_Click"
                        Background="{DynamicResource AccentBrush}"
                        Foreground="White"
                        Margin="10,0,0,0"
                        Padding="10,2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Export to Excel"
                        Click="ExportToExcel_Click"
                        FontSize="18"
                        Padding="10,5"
                        Background="#2563EB"
                        Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
