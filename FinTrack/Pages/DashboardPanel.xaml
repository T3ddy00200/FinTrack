<UserControl x:Class="FinTrack.Controls.DashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Loaded="UserControl_Loaded"
             Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Главная панель"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- Все карточки — UniformGrid с 3 колонками -->
        <UniformGrid Grid.Row="1" Columns="3">
            <!-- Карточка 1: Общая сумма долгов -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Общая сумма долгов"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding TotalDebt, StringFormat={}{0:N0} ₽}"
                               FontSize="24"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Карточка 2: Открытые задолженности -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Открытые задолженности"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding OpenInvoices}"
                               FontSize="24"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Карточка 3: Следующая рассылка -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Следующая рассылка"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding NextAutoSend, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                               FontSize="20"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Карточка 4: Статусы оплаты + PieChart -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Статусы оплаты"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <lvc:PieChart Series="{Binding PaymentStatusSeries}"
                                  LegendLocation="None"
                                  InnerRadius="40"
                                  HoverPushOut="10"
                                  Height="160"
                                  Margin="0,10,0,0"
                                  Background="Transparent"/>
                    <!-- Легенда вручную -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <StackPanel Margin="10,0" HorizontalAlignment="Center">
                            <TextBlock Text="Оплачено" 
                                       Foreground="Blue"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PaidCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10,0" HorizontalAlignment="Center">
                            <TextBlock Text="Не оплачено" 
                                       Foreground="Red"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UnpaidCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10,0" HorizontalAlignment="Center">
                            <TextBlock Text="Частично" 
                                       Foreground="Orange"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PartialCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Карточка “Срочные договора” -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
        CornerRadius="10"
        Padding="15"
        Margin="5">
                <StackPanel>
                    <!-- Заголовок -->
                    <TextBlock Text="Срочные договора"
               FontWeight="Bold"
               FontSize="16"
               Foreground="{DynamicResource TextBrush}"/>
                    <!-- Подзаголовок -->
                    <TextBlock Text="Истекают сегодня/завтра"
               FontSize="14"
               Margin="0,5,0,10"
               Foreground="{DynamicResource SubTextBrush}"/>

                    <!-- Большой счётчик -->
                    <TextBlock Text="{Binding UrgentCount}"
               FontSize="32"
               FontWeight="SemiBold"
               Foreground="{DynamicResource AccentBrush}"
               HorizontalAlignment="Center"/>

                    <!-- Список имён -->
                    <ItemsControl ItemsSource="{Binding UrgentNames}"
                  Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                     Foreground="{DynamicResource TextBrush}"
                     FontSize="14"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <Border Background="{DynamicResource PanelBackgroundBrush}"
        CornerRadius="10"
        Padding="15"
        Margin="5">
                <StackPanel>
                    <TextBlock Text="Входящие"
               FontWeight="Bold"
               FontSize="16"
               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="Непрочитанные письма"
               FontSize="14"
               Margin="0,5,0,10"
               Foreground="{DynamicResource SubTextBrush}"/>
                    <TextBlock Text="{Binding UnreadCount}"
               FontSize="32"
               FontWeight="SemiBold"
               Foreground="{DynamicResource AccentBrush}"
               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>


            <!-- Остальные карточки по тому же шаблону: -->
            <!-- Карточка 5 -->
            <!-- ... -->
        </UniformGrid>
    </Grid>
</UserControl>
