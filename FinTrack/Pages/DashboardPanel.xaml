<UserControl x:Class="FinTrack.Controls.DashboardPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             Loaded="UserControl_Loaded"
             Background="{DynamicResource BackgroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Dashboard"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="{DynamicResource TextBrush}"
                   Margin="0,0,0,20"/>

        <!-- All cards — UniformGrid with 3 columns -->
        <UniformGrid Grid.Row="1" Columns="3">
            <!-- Card 1: Total debt amount -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Total debt amount"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding TotalDebt, StringFormat={}{0:N0} ₽}"
                               FontSize="24"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Card 2: Open invoices -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Open invoices"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding OpenInvoices}"
                               FontSize="24"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Card 3: Next auto-send -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Next auto-send"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="{Binding NextAutoSend, StringFormat={}{0:dd.MM.yyyy HH:mm}}"
                               FontSize="20"
                               Margin="0,10,0,0"
                               Foreground="{DynamicResource TextBrush}"/>
                </StackPanel>
            </Border>

            <!-- Card 4: Payment status + PieChart -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Payment status"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <lvc:PieChart Series="{Binding PaymentStatusSeries}"
                                  LegendLocation="None"
                                  InnerRadius="40"
                                  HoverPushOut="10"
                                  Height="160"
                                  Margin="0,10,0,0"
                                  Background="Transparent"/>
                    <!-- Legend -->
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,0">
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Paid"
                                       Foreground="Blue"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PaidCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Unpaid"
                                       Foreground="Red"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding UnpaidCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Margin="10,0">
                            <TextBlock Text="Partial"
                                       Foreground="Orange"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding PartialCount}"
                                       Foreground="{DynamicResource TextBrush}"
                                       FontSize="18"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Card 5: Urgent contracts -->
            <Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Urgent contracts"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="Due today/tomorrow"
                               FontSize="14"
                               Margin="0,5,0,10"
                               Foreground="{DynamicResource SubTextBrush}"/>
                    <TextBlock Text="{Binding UrgentCount}"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"/>
                    <ItemsControl ItemsSource="{Binding UrgentNames}"
                                  Margin="0,10,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{DynamicResource TextBrush}"
                                           FontSize="14"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>

            <!-- Card 6: Incoming unread emails -->
            <!--<Border Background="{DynamicResource PanelBackgroundBrush}"
                    CornerRadius="10"
                    Padding="15"
                    Margin="5">
                <StackPanel>
                    <TextBlock Text="Incoming"
                               FontWeight="Bold"
                               FontSize="16"
                               Foreground="{DynamicResource TextBrush}"/>
                    <TextBlock Text="Unread emails"
                               FontSize="14"
                               Margin="0,5,0,10"
                               Foreground="{DynamicResource SubTextBrush}"/>
                    <TextBlock Text="{Binding UnreadCount}"
                               FontSize="32"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource AccentBrush}"
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>-->
        </UniformGrid>
    </Grid>
</UserControl>
