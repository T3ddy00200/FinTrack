<Window x:Class="FinTrack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FinTrack"
        MinWidth="975"
        MinHeight="573"
        Width="1280"
        Height="720"
        Background="{DynamicResource BackgroundBrush}"
        Loaded="UserControl_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontSize" Value="35" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Padding" Value="24,14" />
            <Setter Property="MinHeight" Value="40" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter VerticalAlignment="Center" Margin="14,0" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HoverBrush}" />
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Background" Value="{DynamicResource HighlightBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="73"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Content -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="358"/>
            <!-- Left menu -->
            <ColumnDefinition Width="*"/>
            <!-- Main content -->
        </Grid.ColumnDefinitions>

        <!-- Left menu -->
        <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                    Background="{DynamicResource PanelBackgroundBrush}">
            <Image Source="{DynamicResource LogoImageSource}"
                   Height="73" Stretch="Uniform" Margin="0,11"/>
            <Button x:Name="Menu_Home"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Home"
                    Click="Menu_Click"
                    Tag="Home"/>
            <Button x:Name="Menu_Debtors"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Debtors"
                    Click="Menu_Click"
                    Tag="Debtors"/>
            <Button x:Name="Menu_Invoices"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Invoices"
                    Click="Menu_Click"
                    Tag="Invoices"/>
            <Button x:Name="Menu_Reports"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Reports"
                    Click="Menu_Click"
                    Tag="Reports"/>
            <Button x:Name="Menu_Messages"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Messages"
                    Click="Menu_Click"
                    Tag="Messages"/>
            <!-- в StackPanel меню -->
            <Button x:Name="Menu_Marketing"
        Style="{StaticResource MenuButtonStyle}"
        Content="Marketing"
        Click="Menu_Click"
        Tag="Marketing"/>

            <Button x:Name="Menu_Security"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Security"
                    Click="Menu_Click"
                    Tag="Security"/>
            <Button x:Name="Menu_Settings"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Settings"
                    Click="Menu_Click"
                    Tag="Settings"/>
            <Button x:Name="Menu_Users"
                    Style="{StaticResource MenuButtonStyle}"
                    Content="Users"
                    Click="Menu_Click"
                    Tag="Users"/>
        </StackPanel>

        <!-- Top bar -->
        <DockPanel Grid.Row="0" Grid.Column="1"
                   Background="{DynamicResource HeaderBrush}"
                   Margin="0,0,0,1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        DockPanel.Dock="Right"
                        Margin="0,0,20,0">
                <Button Content="🌙/☀"
                        Width="40"
                        Height="30"
                        Margin="0,15,10,15"
                        Click="ThemeToggleButton_Click"/>
                <TextBlock Text="Алексей"
                           Foreground="{DynamicResource TextBrush}"
                           VerticalAlignment="Center"
                           FontSize="16"
                           Margin="10,0"/>
            </StackPanel>
            <TextBlock x:Name="SectionTitle"
                       Text="Home"
                       FontSize="35"
                       FontWeight="Bold"
                       Foreground="{DynamicResource TextBrush}"
                       Margin="20,0,0,0"
                       VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Main content -->
        <Grid Grid.Row="1" Grid.Column="1">
            <ContentControl x:Name="MainContentPanel"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"/>
        </Grid>
    </Grid>
</Window>
